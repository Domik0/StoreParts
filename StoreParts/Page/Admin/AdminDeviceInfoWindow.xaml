<Window x:Class="StoreParts.Page.Admin.AdminDeviceInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreParts.Page.Admin"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="AdminDeviceInfoWindow" Height="130" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Название:" FontSize="15" Margin="10,0" VerticalAlignment="Center"/>
                <TextBox x:Name="deviceTitle" Text="{Binding Title}" FontSize="15" Height="25" Width="120"/>
            </StackPanel>
            <Button Content="Сохранить" Margin="0,10" Click="Save"/>
        </StackPanel>
    </Grid>
</Window>
